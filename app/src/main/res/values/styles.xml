<resources>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="fontFamily">@font/app_font</item>
    </style>


    <style name="ItemTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <!-- CardView Horizontal text styles -->
    <style name="cardViewHorizontalTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- CardView Horizontal subtitle text styles -->
    <style name="cardViewHorizontalSubTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="cardViewHorizontalTodayCountTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardViewRegularTitleTextStyle" parent="cardViewHorizontalTitleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cardViewRegularSubTitleTextStyle" parent="cardViewHorizontalSubTitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ItemSubtitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="DetailsCardViewHorizontalSyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
</resources>
